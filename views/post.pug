extends layout

block content

  h1 Make a post

  form(method='POST')
    div.form-group
      label(for='userName') Title:
      input#name.form-control(type='text', placeholder='Post Title' name='title' required)
      label(for='password') Content:
      input#name.form-control(type='textarea', placeholder='Start typing...', name='message' required)
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg

