extends layout

block content

  h1 Register as New User

  form(method='POST')
    div.form-group
      label(for='fname') First Name:
      input.form-control(type='text', placeholder='John' name='fname' required value=(undefined===user ? '' : user.name.first_name) )
      label(for='lname') Last Name:
      input.form-control(type='text', placeholder='Smith' name='lname' required value=(undefined===user ? '' : user.name.last_name) )
    div.form-group
      label(for='username') Username:
      input.form-control(type='text', placeholder='JohnSmith42' name='username' required value=(undefined===user ? '' : user.username) )
      label(for='fname') Password:
      input.form-control(type='password', name='password' required)
      label(for='fname') Confirm Password:
      input.form-control(type='password', name='password_again' required)
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
