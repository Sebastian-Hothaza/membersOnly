extends layout

block content

  h1 Log In

  form(method='POST')
    div.form-group
      label(for='userName') Username:
      input#name.form-control(type='text', placeholder='Username' name='username' required)
      label(for='password') Password:
      input#name.form-control(type='password', name='password' required)
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg

